<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE components PUBLIC "-//DBFLUTE//DTD LastaDi 1.0//EN" 
	"http://dbflute.org/meta/lastadi10.dtd">
<components namespace="jdbc">
	<include path="jta.xml"/>
	<include path="convention.xml"/>

	<!-- for H2 -->
	<component name="xaDataSource"
		class="org.dbflute.lasta.jta.dbcp.SimpleXADataSource">
		<property name="driverClassName">
			"org.h2.Driver"
		</property>
		<property name="URL">
			"jdbc:h2:file:"
			+ @org.dbflute.lasta.di.util.ResourceUtil@getBuildDir(@org.dbflute.utflute.lasta.dbflute.exbhv.FooBhv@class).getCanonicalPath()
			+ "/exampledb/exampledb"
		</property>
		<property name="user">"sa"</property>
		<property name="password">""</property>
		<destroyMethod>
			@org.dbflute.lasta.di.util.DriverManagerUtil@deregisterAllDrivers()
		</destroyMethod>
   	</component>

	<component class="org.dbflute.lasta.jta.dbcp.SimpleConnectionPool">
		<property name="timeout">600</property>
		<property name="maxPoolSize">10</property>
		<destroyMethod name="close"/>
	</component>

	<component class="org.dbflute.lasta.jta.dbcp.PooledDataSource"/>
</components>